<div class="doctor-sidebar-card bg-white custom-rounded-20 p-4 sticky-top border" style="top: 100px;">

    <!-- 醫師頭像 -->
  <div class="text-center mb-4">
    <div class="doctor-avatar-wrapper mx-auto mb-3" style="width: 160px; height: 160px;">
      <img src="<%= doctor.avatar %>" alt="<%= doctor.name %><%= doctor.title %>" class="w-100 h-100  object-fit-cover">
    </div>
    <!-- <% if (doctor.quote) { %>
      <p class="text-gray-600 mb-2 fs-7"><%- doctor.quote %></p>
    <% } %> -->
  </div>

    <!-- 醫師基本資訊 -->
  <div class="doctor-basic-info text-center mb-4">
    <h3 class="textSerifTC fs-4 text-primary-1000 mb-2"><%= doctor.name %></h3>
    <!-- <p class="text-gray-600 mb-0"><%= doctor.title %></p> -->
  </div>

    <!-- 專業領域 -->
  <% if (doctor.expertise && doctor.expertise.length) { %>
    <div class="expertise-summary mb-4">
      <h6 class="text-primary-800 fw-bold mb-2">專業領域</h6>
      <ul class="list-unstyled fs-7 text-gray-600 lh-lg mb-0">
        <% doctor.expertise.forEach(function(item){ %>
          <li class="mb-1">• <%= item %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

    <!-- 學歷 -->
  <% if (doctor.education && doctor.education.length) { %>
    <div class="education-summary">
      <h6 class="text-primary-800 fw-bold mb-2">學歷</h6>
      <ul class="list-unstyled fs-7 text-gray-600 lh-lg mb-0">
        <% doctor.education.forEach(function(item){ %>
          <li class="mb-1">• <%= item %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>
</div>